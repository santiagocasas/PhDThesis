@Article{cui_halo_2012,
  Title                    = {The halo mass function in interacting {Dark} {Energy} models},
  Author                   = {Cui, Weiguang and Baldi, Marco and Borgani, Stefano},
  Journal                  = {arXiv:1201.3568},
  Year                     = {2012},

  Month                    = jan,

  Abstract                 = {We present a detailed investigation of the effects that a direct interaction between Dark Energy (DE) and Cold Dark Matter (CDM) particles imprints on the Halo Mass Function (HMF) of groups and clusters of galaxies. Making use of the public halo catalogs of the \{{\textbackslash}textbackslashtextbackslashtextbackslashtextbackslashsmall CoDECS\} simulations, we derive the HMF for several different types of coupled DE scenarios both based on the FoF algorithm and on the SO halo identification for different values of the overdensity threshold \${\textbackslash}textbackslashtextbackslashtextbackslashtextbackslashDelta\_\{c\}\$. We compare the computed HMFs for coupled DE cosmologies with \${\textbackslash}textbackslashtextbackslashtextbackslashtextbackslashLambda \$CDM as well as with the predictions of the standard analytic fitting functions. Our results show that the standard fitting functions still reproduce reasonably well both the FoF and the SO HMFs of interacting DE cosmologies at intermediate masses and at low redshifts, once rescaled to the characteristic amplitude of linear density perturbations of each specific model as given by \${\textbackslash}textbackslashtextbackslashtextbackslashtextbackslashsigma\_\{8\}\$. However, we also find that such apparent degeneracy with \${\textbackslash}textbackslashtextbackslashtextbackslashtextbackslashsigma\_\{8\}\$ is broken both by the high-mass tail and by the redshift evolution of our HMFs, with deviations beyond \${\textbackslash}textbackslashtextbackslashtextbackslashtextbackslashsim 10\%\$ for most of the models under investigation. Furthermore, the discrepancy with respect to the predictions of standard fitting functions rescaled with the characteristic value of \${\textbackslash}textbackslashtextbackslashtextbackslashtextbackslashsigma\_\{8\}\$ shows – for some models – a strong dependence on the spherical overdensity threshold \${\textbackslash}textbackslashtextbackslashtextbackslashtextbackslashDelta\_\{c\}\$ used for the halo identification. We find that such effect is due to a significant increase of halo concentration at low redshifts in these models, that is however absent in the majority of the cosmological scenarios considered in this work. We can therefore conclude that the universality of the HMF is violated by cosmological models that feature a direct interaction between DE and CDM.},
  Url                      = {http://arxiv.org/abs/1201.3568}
}

