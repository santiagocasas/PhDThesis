@article{agarwal_pkann_2012,
  author =        {Agarwal, Shankar and Abdalla, Filipe B. and
                   Feldman, Hume A. and Lahav, Ofer and
                   Thomas, Shaun A.},
  journal =       {Monthly Notices of the Royal Astronomical Society},
  month =         aug,
  note =          {arXiv: 1203.1695},
  number =        {2},
  pages =         {1409--1418},
  title =         {{PkANN} - {I}. {Non}-linear matter power spectrum
                   interpolation through artificial neural networks},
  volume =        {424},
  year =          {2012},
  abstract =      {We investigate the interpolation of power spectra of
                   matter fluctuations using Artificial Neural Network
                   (PkANN). We present a new approach to confront
                   small-scale non-linearities in the power spectrum of
                   matter fluctuations. This ever-present and pernicious
                   uncertainty is often the Achilles' heel in
                   cosmological studies and must be reduced if we are to
                   see the advent of precision cosmology in the
                   late-time Universe. We show that an optimally trained
                   artificial neural network (ANN), when presented with
                   a set of cosmological parameters (Omega\_m
                   h{\textasciicircum}2, Omega\_b h{\textasciicircum}2,
                   n\_s, w\_0, sigma\_8, m\_nu and redshift z), can
                   provide a worst-case error {\textless}=1 per cent
                   (for z{\textless}=2) fit to the non-linear matter
                   power spectrum deduced through N-body simulations,
                   for modes up to k{\textless}=0.7 h/Mpc. Our power
                   spectrum interpolator is accurate over the entire
                   parameter space. This is a significant improvement
                   over some of the current matter power spectrum
                   calculators. In this paper, we detail how an accurate
                   interpolation of the matter power spectrum is
                   achievable with only a sparsely sampled grid of
                   cosmological parameters. Unlike large-scale N-body
                   simulations which are computationally expensive
                   and/or infeasible, a well-trained ANN can be an
                   extremely quick and reliable tool in interpreting
                   cosmological observations and parameter estimation.
                   This paper is the first in a series. In this method
                   paper, we generate the non-linear matter power
                   spectra using HaloFit and use them as mock
                   observations to train the ANN. This work sets the
                   foundation for Paper II, where a suite of N-body
                   simulations will be used to compute the non-linear
                   matter power spectra at sub-per cent accuracy, in the
                   quasi-non-linear regime 0.1 h/Mpc {\textless}= k
                   {\textless}= 0.9 h/Mpc. A trained ANN based on this
                   N-body suite will be released for the scientific
                   community.},
  doi =           {10.1111/j.1365-2966.2012.21326.x},
  issn =          {00358711},
  url =           {http://arxiv.org/abs/1203.1695},
}

@article{agarwal_pkann_2014,
  author =        {Agarwal, Shankar and Abdalla, Filipe B. and
                   Feldman, Hume A. and Lahav, Ofer and
                   Thomas, Shaun A.},
  journal =       {Monthly Notices of the Royal Astronomical Society},
  month =         mar,
  note =          {arXiv: 1312.2101},
  number =        {2},
  pages =         {2102--2121},
  title =         {{PkANN} - {II}. {A} non-linear matter power spectrum
                   interpolator developed using artificial neural
                   networks},
  volume =        {439},
  year =          {2014},
  abstract =      {In this paper we introduce PkANN, a freely available
                   software package for interpolating the non-linear
                   matter power spectrum, constructed using Artificial
                   Neural Networks (ANNs). Previously, using Halofit to
                   calculate matter power spectrum, we demonstrated that
                   ANNs can make extremely quick and accurate
                   predictions of the power spectrum. Now, using a suite
                   of 6380 N-body simulations spanning 580 cosmologies,
                   we train ANNs to predict the power spectrum over the
                   cosmological parameter space spanning
                   \$3{\textbackslash}sigma\$ confidence level (CL)
                   around the concordance cosmology. When presented with
                   a set of cosmological parameters
                   (\${\textbackslash}Omega\_\{{\textbackslash}rm m\}
                   h{\textasciicircum}2,
                   {\textbackslash}Omega\_\{{\textbackslash}rm b\}
                   h{\textasciicircum}2, n\_s, w,
                   {\textbackslash}sigma\_8, {\textbackslash}sum
                   m\_{\textbackslash}nu\$ and redshift \$z\$), the
                   trained ANN interpolates the power spectrum for
                   \$z{\textbackslash}leq2\$ at sub-per cent accuracy
                   for modes up to
  \$k{\textbackslash}leq0.9{\textbackslash},h{\textbackslash}textrm\{Mpc\}{\textasciicircum}\{-1\}\$.
  PkANN is faster than computationally expensive N-body simulations, yet
  provides a worst-case error \${\textless}1\$ per cent fit to the non-linear
  matter power spectrum deduced through N-body simulations. The overall
  precision of PkANN is set by the accuracy of our N-body simulations, at 5 per
  cent level for cosmological models with \${\textbackslash}sum
  m\_{\textbackslash}nu{\textless}0.5\$ eV for all redshifts
  \$z{\textbackslash}leq2\$. For models with \${\textbackslash}sum
  m\_{\textbackslash}nu{\textgreater}0.5\$ eV, predictions are expected to be
  at 5 (10) per cent level for redshifts \$z{\textgreater}1\$
  (\$z{\textbackslash}leq1\$). The PkANN interpolator may be freely downloaded
  from http://zuserver2.star.ucl.ac.uk/{\textasciitilde}fba/PkANN},
  doi =           {10.1093/mnras/stu090},
  issn =          {0035-8711, 1365-2966},
  url =           {http://arxiv.org/abs/1312.2101},
}

@article{bird_massive_2011,
  author =        {Bird, Simeon and Viel, Matteo and
                   Haehnelt, Martin G.},
  journal =       {arXiv:1109.4416},
  month =         sep,
  note =          {MNRAS, March 2012, Vol 420, Issue 3, 2551-2561},
  title =         {Massive {Neutrinos} and the {Non}-linear {Matter}
                   {Power} {Spectrum}},
  year =          {2011},
  abstract =      {We perform an extensive suite of N-body simulations
                   of the matter power spectrum, incorporating massive
                   neutrinos in the range M = 0.15-0.6 eV, probing the
                   non-linear regime at scales k
                   {\textbackslash}textless 10 hMpc-1 at z
                   {\textbackslash}textless 3. We extend the widely used
                   HALOFIT approximation to account for the effect of
                   massive neutrinos on the power spectrum. In the
                   strongly non-linear regime HALOFIT systematically
                   over-predicts the suppression due to the
                   free-streaming of the neutrinos. The maximal
                   discrepancy occurs at k
                   {\textbackslash}textasciitilde 1 hMpc-1, and is at
                   the level of 10\% of the total suppression. Most
                   published constraints on neutrino masses based on
                   HALOFIT are not affected, as they rely on data
                   probing the matter power spectrum in the linear or
                   mildly non-linear regime. However, predictions for
                   future galaxy, Lyman-alpha forest and weak lensing
                   surveys extending to more non-linear scales will
                   benefit from the improved approximation to the
                   non-linear matter power spectrum we provide. Our
                   approximation reproduces the induced neutrino
                   suppression over the targeted scales and redshifts
                   significantly better. We test its robustness with
                   regard to changing cosmological parameters and a
                   variety of modelling effects.},
  doi =           {10.1111/j.1365-2966.2011.20222.x},
  url =           {http://arxiv.org/abs/1109.4416},
}

